<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center" >
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" 
        android:layout_marginBottom="30dip">

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:text="aa" />
        <TextView
            android:id="@+id/tv_balance"
            android:layout_marginTop="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
               android:layout_marginLeft="5dip"
            android:text="aa" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
      android:layout_marginBottom="30dip"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip">
        <Button
            android:id="@+id/bt_Recharge"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Recharge"
            android:layout_weight=".4" />
        <View android:layout_width="0dip"
            android:layout_height="10dip"
            android:layout_weight=".1"/>
        <Button
            android:id="@+id/bt_BillPayment"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Bill Payment"
            android:layout_weight=".4" />
    </LinearLayout>
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginBottom="30dip">
        <Button
            android:id="@+id/bt_FundTransfer"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Fund transfer"
            android:layout_weight=".4" />
        <View android:layout_width="0dip"
            android:layout_height="10dip"
            android:layout_weight=".1"/>
        <Button
            android:id="@+id/bt_Ticketing"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Ticketing"
            android:layout_weight=".4" />
    </LinearLayout>
    
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginBottom="30dip">
        <Button
            android:id="@+id/bt_CArdsLoan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Cards&amp;Loan"
            android:layout_weight=".4" />
        <View android:layout_width="0dip"
            android:layout_height="10dip"
            android:layout_weight=".1"/>
        <Button
            android:id="@+id/bt_offers"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Offers"
            android:layout_weight=".4" />
    </LinearLayout>
 
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/bt_MyTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="My Transaction"
            android:layout_weight=".4" />
    </LinearLayout>
  
    
</LinearLayout>
