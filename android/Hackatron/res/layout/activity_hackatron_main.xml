<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.Barclay.hackatron.HackatronMainActivity" 
   android:background="#ffffff"
    android:orientation="vertical"
    >
    <LinearLayout 
        android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
<ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:src="@drawable/symbol" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dip"
        android:gravity="center"
       android:padding="5dip"
         >

        <EditText
            android:id="@+id/edt_userNm"
            android:layout_width="match_parent"
            android:hint="User Phone Number"
            android:layout_height="wrap_content"
            android:inputType="number"
              android:background="@drawable/black_border_edit_textbox"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edt_Passwrd"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:background="@drawable/black_border_edit_textbox"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_Submit"
            android:layout_marginTop="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_border"
            android:text="Submit" />

        <TextView
            android:id="@+id/tv_wrongPassowrd"
            android:layout_width="wrap_content"
            android:layout_marginTop="25dip"
             android:textColor="@color/RedAlert"
            android:background="@drawable/light_red_border"
            android:layout_height="wrap_content"
            android:text="" />

    </LinearLayout>

    

</LinearLayout>